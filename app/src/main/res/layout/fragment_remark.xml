<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".info.RemarkFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:background="@drawable/borders"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etTextRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="3dp"
            android:paddingHorizontal="3dp"
            android:textSize="24sp"
            android:lines="5"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:divider="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnAddPhoto"
                android:layout_width="@dimen/img_btn_size"
                android:layout_height="@dimen/img_btn_size"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/add_photo256" />

            <ImageButton
                android:id="@+id/btnAddImage"
                android:layout_width="@dimen/img_btn_size"
                android:layout_height="@dimen/img_btn_size"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:padding="5dp"
                app:srcCompat="@drawable/add_image256"
                android:background="@android:color/transparent"
                />

            <ImageButton
                android:id="@+id/btnAddRemark"
                android:layout_width="@dimen/img_btn_size"
                android:layout_height="@dimen/img_btn_size"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:padding="10dp"
                app:srcCompat="@drawable/add256"
                android:background="@android:color/transparent"
                />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>