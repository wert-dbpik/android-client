<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingTop="10dp"
    tools:context=".settings.SettingsActivity">

    <TextView
        android:text="Настройки:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textSize="26sp"/>

    <CheckBox
        android:id="@+id/cbShowFolders"
        android:text="Указывать исходную папку"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"/>

    <CheckBox
        android:id="@+id/cbHidePrefixes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Скрывать перфиксы"
        android:textSize="18sp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:text="О приложении:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:textSize="26sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <TextView
            android:text="Версия:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvVersion"
            android:text="1.0"
            android:layout_marginStart="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvVersionAvalable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Доступна новая версия: 1.1 "
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:layout_marginStart="20dp"
        android:text="Разработчик: Симонов Алексей, 2022г"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"/>


</LinearLayout>