<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chat.ChatDialogFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvChatName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="НАИМЕНОВАНИЕ ЧАТА"
            android:background="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:paddingVertical="5dp"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMessages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:layout_marginTop="0dp"
            android:scrollbars="vertical" >

        </androidx.recyclerview.widget.RecyclerView>


        <EditText
            android:id="@+id/etMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Какое-то длинное предлинное сообщение на несколько строк"
            android:ems="10"
            android:maxLines="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llAddPicsButtons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/ibtnSendPhoto"
                    android:layout_width="@dimen/img_btn_size"
                    android:layout_height="@dimen/img_btn_size"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/add_photo256" />

                <ImageButton
                    android:id="@+id/ibtnSendImage"
                    android:layout_width="@dimen/img_btn_size"
                    android:layout_height="@dimen/img_btn_size"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:padding="5dp"
                    app:srcCompat="@drawable/add_image256"
                    android:background="@android:color/transparent"/>

                <ImageButton
                    android:id="@+id/ibtnSendLink"
                    android:layout_width="@dimen/img_btn_size"
                    android:layout_height="@dimen/img_btn_size"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:padding="5dp"
                    app:srcCompat="@drawable/link"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/ibtnSend"
                android:layout_width="@dimen/img_btn_size"
                android:layout_height="@dimen/img_btn_size"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:padding="5dp"
                app:srcCompat="@drawable/send"
                android:background="@android:color/transparent"/>




        </LinearLayout>

    </LinearLayout>


</FrameLayout>